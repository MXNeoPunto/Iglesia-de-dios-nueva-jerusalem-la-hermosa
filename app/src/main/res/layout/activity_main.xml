<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Background Layer (Edge-to-Edge) -->
    <View
        android:id="@+id/gradient_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/md_theme_light_primaryContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Content Container (To apply insets to) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/app_name"
                app:titleCentered="true"
                style="@style/Widget.Material3.Toolbar.Surface"
                android:background="@android:color/transparent" />

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Album Art / Logo Placeholder (Animated) -->
        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintBottom_toTopOf="@+id/play_pause_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
            app:layout_constraintVertical_bias="0.4"
            app:tint="?attr/colorPrimary" />

        <!-- Timer Text -->
        <TextView
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorError"
            android:visibility="gone"
            tools:text="15:00"
            tools:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/status_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/play_pause_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Play/Pause Button -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/play_pause_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:text="@string/play"
            app:icon="@drawable/ic_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Timer Button (Left) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/timer_button"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="16dp"
            app:icon="@drawable/ic_timer"
        app:iconSize="32dp"
        app:iconTint="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="@+id/play_pause_button"
            app:layout_constraintEnd_toStartOf="@+id/play_pause_button"
            app:layout_constraintTop_toTopOf="@+id/play_pause_button" />

        <!-- Car Mode Button (Right) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/car_mode_button"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
            app:icon="@drawable/ic_car_mode"
        app:iconSize="32dp"
        app:iconTint="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="@+id/play_pause_button"
            app:layout_constraintStart_toEndOf="@+id/play_pause_button"
            app:layout_constraintTop_toTopOf="@+id/play_pause_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
